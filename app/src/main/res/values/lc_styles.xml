<?xml version="1.0" encoding="utf-8"?>

<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="TextAppearance.AppCompat.Widget.ActionBar.Title" parent="android:TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Widget.AppCompat.CompoundButton.CheckBox" parent="android:Widget.Holo.Light.CompoundButton.CheckBox" />

    <style name="Widget.AppCompat.ListPopupWindow" parent="android:Widget.Holo.Light.ListPopupWindow" />

    <style name="Widget.AppCompat.ListView.DropDown" parent="android:Widget.Holo.ListView.DropDown" />

    <style name="Widget.AppCompat.ActionButton.Overflow" parent="android:Widget.Holo.Light.ActionButton.Overflow">
        <item name="android:src">@drawable/lc_ic_menu_moreoverflow_ab</item>
    </style>

    <style name="Widget.AppCompat.Spinner.DropDown" parent="android:Widget.Holo.Light.Spinner" />

    <style name="Widget.AppCompat.Spinner.DropDown.ActionBar">
        <item name="android:background">@drawable/lc_spinner_ab</item>
    </style>

    <style name="Widget.AppCompat.ActionBar" parent="android:Widget.Holo.Light.ActionBar.Solid">
        <item name="android:titleTextStyle">
            @style/TextAppearance.AppCompat.Widget.ActionBar.Title
        </item>
        <item name="android:background">@color/actionBarStyle</item>
        <item name="android:backgroundStacked">@color/white</item>
        <item name="android:homeAsUpIndicator">@drawable/lc_ic_ab_back</item>
    </style>

    <style name="Widget.AppCompat.ActionBar.TabView" parent="android:Widget.Holo.Light.ActionBar.TabView">
        <item name="android:background">@drawable/lc_tab_indicator_ab</item>
    </style>

    <style name="Widget.AppCompat.ActionBar.TabBar" parent="android:Widget.Holo.Light.ActionBar.TabBar">
        <item name="android:showDividers">none</item>
    </style>

    <style name="Widget.AppCompat.ActionBar.TabText" parent="android:Widget.Holo.Light.ActionBar.TabText">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/lc_ab_tab_text_color</item>
    </style>

    <style name="Widget.AppCompat.ActionBar.PopupMenu" parent="android:Widget.Holo.PopupMenu">
        <item name="android:popupBackground">@drawable/lc_overflow_menu_popup_background</item>
        <item name="android:dropDownVerticalOffset">0dp</item>
        <item name="android:dropDownHorizontalOffset">0dp</item>
        <item name="android:dropDownWidth">wrap_content</item>
    </style>

    <style name="Widget.AppCompat.OverflowMenu" parent="android:Widget.Holo.Light.PopupMenu">
        <!--<item name="android:dropDownSelector">@android:drawable/list_selector_holo_light</item>-->
        <item name="android:popupBackground">@drawable/lc_overflow_menu_popup_background</item>
        <item name="android:dropDownVerticalOffset">0dp</item>
        <item name="android:dropDownHorizontalOffset">0dp</item>
        <item name="android:dropDownWidth">wrap_content</item>
    </style>

    <style name="TextAppearance.AppCompat.Widget.ActionBar.Menu" parent="android:TextAppearance.Holo.Widget.ActionBar.Menu">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="DialogOperationTextStyle">
        <item name="android:minHeight">55dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/black</item>
    </style>
</resources>