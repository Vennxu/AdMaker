<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/scene_top"
    android:orientation="vertical">

    <include layout="@layout/normal_title"/>

    <include layout="@layout/scene_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="10dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/share_to_divice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/save_to_phone"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:background="@drawable/send_btn_selector"/>

        <TextView
            android:id="@+id/share_to_platform"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/share_to_platform"
            android:layout_margin="20dp"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:background="@drawable/send_btn_selector"/>

        </LinearLayout>

</LinearLayout>
