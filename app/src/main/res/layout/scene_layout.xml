<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:wheel="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <FrameLayout
        android:id="@+id/choose_image_frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/choose_image_bg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/ic_preview_bg"
            android:scaleType="fitXY" />

        <com.ekuater.admaker.ui.widget.RoundImageView
            android:id="@+id/choose_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:scaleType="fitXY"
            android:src="@drawable/pic_loading" />
    </FrameLayout>

    <com.pnikosis.materialishprogress.ProgressWheel
        android:id="@+id/choose_progress"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_gravity="center"
        android:visibility="gone"
        wheel:matProg_barColor="@color/actionBarStyle"
        wheel:matProg_progressIndeterminate="true"
        wheel:matProg_rimColor="@color/white" />
</FrameLayout>